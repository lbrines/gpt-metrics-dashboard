# Dashboard de Métricas para GPTs Personalizados
# Archivo de ejemplo para variables de entorno
# Copia este archivo como .env y configura los valores reales

# Configuración de la base de datos
DATABASE_URL=postgresql://admin:adminpassword@postgres:5432/metricas_gpt

# Configuración del servidor
DEBUG=False
APP_NAME=Dashboard de Métricas GPT

# Configuración de seguridad (OBLIGATORIO)
GPT_API_TOKEN=your_secure_token_here

# Configuración de CORS (orígenes permitidos separados por comas)
CORS_ORIGINS=https://koomtai.com,http://localhost:3000

# Configuración del frontend
VITE_API_URL=http://localhost:8000
VITE_GPT_API_TOKEN=your_secure_token_here

# Configuración de producción (opcional)
PRODUCTION=False
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Configuración de zona horaria y idioma
TIME_ZONE=UTC
LANGUAGE_CODE=es

# Configuración de logging
LOG_LEVEL=INFO 