# Application Environment
APP_ENV=development
SECRET_KEY=change-this-to-a-secure-secret-key

# Database Configuration
POSTGRES_USER=dashboard_user
POSTGRES_PASSWORD=change-this-to-a-secure-password
POSTGRES_DB=dashboard_metrics
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL (auto-generated, don't change)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Frontend Configuration
VITE_API_URL=/api
NODE_ENV=development

# Domain (for production)
DOMAIN=localhost

# Email (for Let's Encrypt and notifications)
EMAIL=admin@example.com

# Redis Configuration (optional)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=change-this-to-a-secure-password

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting (requests per minute per IP)
RATE_LIMIT=100

# Session Configuration
SESSION_SECRET=change-this-to-a-secure-session-secret
SESSION_MAX_AGE=86400  # 1 day in seconds

# Security Headers
SECURE_HEADERS_ENABLED=true
CSP_ENABLED=true

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# External Services (optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket

# Email Configuration (optional)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# EMAIL_FROM=noreply@example.com
# EMAIL_NAME="Dashboard Notifications"
